// Prisma Schema for Coffre-Fort Backend

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User model
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Hashed with bcrypt
  firstName String?
  lastName  String?
  role      Role     @default(USER)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  temporaryAccesses TemporaryAccess[]
  passwordResetTokens PasswordResetToken[]

  @@map("users")
}

// TemporaryAccess model
model TemporaryAccess {
  id        String   @id @default(uuid())
  userId    String
  startDate DateTime
  endDate   DateTime
  isActive  Boolean  @default(true)
  createdBy String?  // Admin who created this access
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("temporary_accesses")
}

// PasswordResetToken model
model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  used      Boolean  @default(false)
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("password_reset_tokens")
}

// AnalysisJob model - Pour l'analyse IA asynchrone
model AnalysisJob {
  id                String    @id @default(uuid())
  documentId        Int
  documentTimestamp String?   // Timestamp du fichier Mayan (file_latest.timestamp) pour d√©tecter modifications
  status            JobStatus @default(PENDING)
  result            Json?     // Stocke { summary, keywords }
  error             String?
  createdBy         String    // User ID
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt
  completedAt       DateTime?

  @@map("analysis_jobs")
  @@index([createdBy])
  @@index([status])
  @@index([documentId])
}

// Enum for user roles
enum Role {
  USER
  ADMIN
  CONSULTANT
}

// Enum for job status
enum JobStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
}
